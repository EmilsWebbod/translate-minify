{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "lib": ["dom", "es7", "es2019"],
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
