{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "react",
    "sourceMap": false,
    "lib": ["dom", "es7"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
